CREATE SCHEMA 'schoolapp' ;

CREATE TABLE Classes (classId int, className varchar(40), primary key(classId));
CREATE TABLE Students (studentId INT, firstName VARCHAR(30), lastName VARCHAR(30), age INT, classId INT, foreign key (classId) references Classes(classId));

